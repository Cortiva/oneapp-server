<% const title = 'Reset Your Password' %>
<% const content = `
  <h1>Hi, ${userName}!</h1>
  <p>We received a request to reset your password for your ${companyName} account.</p>
  <p>Use the following One-Time Password (OTP) to reset your password:</p>
  <div class="otp-box">${otp}</div>
